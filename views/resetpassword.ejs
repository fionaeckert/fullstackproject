</head>

<body>
    <div class="form-body">
        <div class="row">
            <div class="form-holder">
                <div class="form-content">
                    <div class="form-items">
                        
                        
                        <h3>Reset Password</h3>
                        <p>Enter the code sent to your email</p>
                        
                        <form action="/resetpassword?_method=PUT" method="POST" class="requires-validation" novalidate>
                            <% {%>
                                <div class="col-md-12">
                                <input class="form-control" type="text" name="email" placeholder="Email" aria-required="true" required>
                                </div>

                                <div class="col-md-12">
                                    <input class="form-control" type="text" name="resetLink" placeholder="Reset Code" aria-required="true" required>
                                </div>
                                <div class="col-md-12">
                                    <input class="form-control" type="password" name="password" placeholder="Enter New Password" required>
                                    <input class="form-control" type="password" name="confirmpassword" placeholder="Confirm New Password" required>
                                </div>


                                <div class="form-button mt-3">
                                    <button id="submit" type="submit" class="btn btn-primary">Update Password!</button>
                                </div>
                                <% if (error != '') { %>
                                    <!-- <div class="alert alert-danger" role="alert"><%- error %></div> -->
                                    <span class="badge"><%= error %></span>
                                <% } %> 

                                
                            <%} %>
                        </form>

                    </div>
                </div>
            </div>
        </div>
    </div>

</body>
<script src="../index.js"></script>
</html>