    <link rel="stylesheet" href="/css/style.css">

    <title>Forgot Password</title>
</head>
<body>
    <form action="/forgotpassword?_method=PUT" method="POST" class="requires-validation" novalidate>
        <% {%>
            <div class="col-md-12">
            <input class="form-control" type="text" name="email" placeholder="Email" aria-required="true" required>
            </div>

            <div class="form-button mt-3">
                <button id="submit" type="submit" class="btn btn-primary">Get Reset Link!</button>
            </div>
        <%} %>
    </form>
</body>
